<div class="container">
  <!-- ポーズ名を上部中央に表示 -->
  <div class="row">
    <div class="col-12 text-center mt-4">
      <h1><%= @pose.japanese_name %></h1>
    </div>
  </div>

  <div class="row mt-4 mb-2">
    <div class="col-md-6 d-flex align-items-center justify-content-center mb-3">
      <%= image_tag @pose.image, class: "img-fluid fixed-size" %>
    </div>

  <div class="col-md-6">
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">効能</h5>
        <p class="card-text"><%= @pose.benefit %></p>
      </div>
    </div>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">手順</h5>
        <p class="card-text"><%= simple_format(@pose.description.gsub("\n", "<br>")) %></p>
      </div>
    </div>
    <div class="card mb-4">
      <div class="card-body">
        <h5 class="card-title">Tip</h5>
        <p class="card-text"><%= simple_format(@pose.tip.gsub("\n", "<br>")) %></p>
      </div>
    </div>
  </div>
</div>